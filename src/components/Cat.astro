---
const trabajos = ["Almanaques", "Afiches", "Tarjetas", "Etiquetas", "Volantes", "Boletas", "Carpetas Corporativas", "Hojas Membretadas", "Sobres Comerciales"]
---

<section class="">
    {trabajos && trabajos.map((trabajo) => {
        return <a>{trabajo}</a>
    })}
</section>

<style>

    section {
        display: grid;
        justify-content: center;
        grid-template-columns: auto auto auto;
        grid-template-rows: auto;
        gap: 1rem;
        margin-inline: 900px;
    }

    section a {
        padding: 20px;
        background: #26282c;
        color: white;
        font-weight:600;
        font-size: 1.8rem;
        border-radius: 10px;
    }
</style>