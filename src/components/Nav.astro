---
import Logo from "../../public/logo-nav.webp";
import Search from "../../public/iconos/search.svg";
import Close from "../../public/iconos/close.svg";
---

<nav class="w-full h-28 top-0 fixed">
    <div class="flex flex-row h-full items-center justify-center m-auto gap-4">
        <img class="h-24" src={Logo.src} alt="Gráfica Gerli" />
        <div class='flex gap-1 items-center bg-gray-800 w-[80%] sm:w-[90%] lg:w-[30%] h-7 rounded-sm p-2'>
            <img src={Search.src} alt='Buscar: ícono de lupa' />
            <input type="search" placeholder="Buscar" class="search-input bg-transparent outline-none placeholder:text-gray-200 w-full" />
            <img src={Close.src} alt='Cerrar buscador.' class="hover:cursor-pointer hover:opacity-80 duration-200" />
        </div>
    </div>
</nav>

<style>
    nav {
        background: #0d0f13;
    }
</style>