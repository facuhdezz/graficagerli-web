---
const { imagen, titulo } = Astro.props;
---

<article>
    <div class="max-w-40 sm:max-w-72 flex flex-col rounded-xl overflow-hidden bg-[#1f2129]">
        <div class="overflow-hidden">
            <img class="hover:scale-[1.06] hover:cursor-pointer duration-200" src={imagen.src} alt={titulo}/>
        </div>
        <div class="p-3 sm:p-6 flex flex-col items-center gap-2 sm:gap-4 lg:gap-6">
            <h1 class="text-xl sm:text-3xl font-bold text-white">{titulo}</h1>
            <a class="py-1 px-2 sm:py-2 sm:px-3 border rounded border-blue-800 text-white font-semibold text-base sm:text-xl mx-auto hover:cursor-pointer hover:bg-blue-800 hover:border-blue-950 duration-200">Presupuestar</a>
        </div>
    </div>
</article>